<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="is.valitor.lokaverkefni.oturgjold.CardFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rain_creditcard" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nafn korts"
            android:id="@+id/fragmentCardName"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/card_name_top_margin"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#ffffffff"
            android:gravity="right"
            android:paddingRight="@dimen/card_name_right_margin" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXX XXXX XXXX 1234"
            android:textSize="15dp"
            android:shadowColor="#ff383838"
            android:shadowRadius="1.5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/fragmentCardNumber"
            android:typeface="monospace"
            android:paddingBottom="@dimen/inputblock_vertical_margin"
            android:textColor="#ffdcdcdc"
            android:textColorHighlight="#ffffffff"
            android:paddingTop="@dimen/card_number_top_margin" />

        <TextView
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_fragment_balance"
            android:textSize="12dp"
            android:id="@+id/fragmentCardBalanceLabel"
            android:paddingRight="@dimen/card_balance_right_margin"
            android:paddingTop="@dimen/card_balance_top_margin" />

        <TextView
            android:gravity="center|right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="300.000"
            android:textSize="20dp"
            android:id="@+id/fragmentCardBalance"
            android:paddingRight="@dimen/card_balance_right_margin"
            android:typeface="monospace" />

    </LinearLayout>

</RelativeLayout>