<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainLinearLayout"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="2"
    android:background="@drawable/g">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardPager"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_width="fill_parent"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Innskráning"
            android:id="@+id/button_register_account"

            android:clickable="true"
            android:onClick="registerAccount"
            android:enabled="true"
            android:background="@drawable/round_button"
            android:textColor="#fff"
            android:layout_alignTop="@+id/button_register_card"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_register_card"
            android:id="@+id/button_register_card"
            android:clickable="true"
            android:onClick="registerCard"
            android:enabled="true"
            android:background="@drawable/round_button"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="96dp"
            android:layout_height="107dp"
            android:text="Greiða"
            android:id="@+id/button_payment"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="payment"
            android:enabled="true"
            android:background="@drawable/round_button"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



        <!--<Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Velja aðalkort"
            android:id="@+id/button_default_card"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:onClick="getDefaultName"
            android:enabled="true" />-->


    </RelativeLayout>
</LinearLayout>
