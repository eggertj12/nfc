<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="is.valitor.lokaverkefni.oturgjold.ManageCardActivity">

    <EditText android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dump_default_name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sækja nafn aðalkorts"
        android:id="@+id/button_get_default_cardname"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="getDefaultName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fara til baka"
        android:id="@+id/button_end_manage_card_activity"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:onClick="endView"/>

</RelativeLayout>
