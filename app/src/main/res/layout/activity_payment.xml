<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="is.valitor.oturgjold.app.RegisterCardActivity"
    android:fillViewport="true"
    android:background="@drawable/leather_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="is.valitor.lokaverkefni.oturgjold.PaymentActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/pin_seekBar">

            <TextView
                android:id="@+id/pin_stars_1"
                style="@style/PinStar" />

            <TextView
                android:id="@+id/pin_stars_2"
                style="@style/PinStar" />

            <TextView
                android:id="@+id/pin_stars_3"
                style="@style/PinStar" />

            <TextView
                android:id="@+id/pin_stars_4"
                style="@style/PinStar" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:id="@+id/pin_separator_header"
            android:layout_below="@+id/pin_seekBar"
            android:visibility="visible"
            android:layout_marginTop="@dimen/inputblock_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/dark_orange"/>

        <LinearLayout
            android:id="@+id/pin_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pin_separator_header">
            <Button
                android:text="1"
                android:id="@+id/button_pin_1"
                style="@style/ButtonPayment" />
            <Button
                android:text="2"
                android:id="@+id/button_pin_2"
                style="@style/ButtonPayment" />
            <Button
                android:text="3"
                android:id="@+id/button_pin_3"
                style="@style/ButtonPayment" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pin_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pin_row1">
            <Button
                android:text="4"
                android:id="@+id/button_pin_4"
                style="@style/ButtonPayment" />
            <Button
                android:text="5"
                android:id="@+id/button_pin_5"
                style="@style/ButtonPayment" />
            <Button
                android:text="6"
                android:id="@+id/button_pin_6"
                style="@style/ButtonPayment" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pin_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pin_row2">
            <Button
                android:text="7"
                android:id="@+id/button_pin_7"
                style="@style/ButtonPayment" />
            <Button
                android:text="8"
                android:id="@+id/button_pin_8"
                style="@style/ButtonPayment" />

            <Button
                android:text="9"
                android:id="@+id/button_pin_9"
                style="@style/ButtonPayment" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pin_row4"
            android:layout_below="@id/pin_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:id="@+id/button_pin_back"
                android:text="\uE602"
                android:textSize="16sp"
                style="@style/ButtonPayment" />
            <Button
                android:text="0"
                android:id="@+id/button_pin_0"
                style="@style/ButtonPayment" />
            <Button
                android:id="@+id/button_pin_cancel"
                android:text=""
                style="@style/ButtonPayment"
                android:clickable="false"
                android:enabled="false" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:id="@+id/pin_separator_footer"
            android:layout_below="@+id/pin_row4"
            android:visibility="visible"
            android:background="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_enter_pin"
            android:textColor="@color/bright_orange"
            android:id="@+id/textView_pin_message"
            android:layout_below="@+id/pin_separator_footer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center" />

    </RelativeLayout>
</ScrollView>