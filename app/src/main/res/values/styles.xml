<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_white</item>

        <!-- Styles for individual elements. -->
        <item name="android:actionBarStyle">@style/ActionBarHeader</item>
        <item name="android:editTextBackground">@drawable/edittextcolors_edit_text_holo_dark</item>
        <item name="android:editTextColor">@color/text_white</item>

        <!-- <item name="android:windowNoTitle">true</item> -->
    </style>

    <style name="ActionBarHeader" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- Customize Action Bar -->
        <item name="android:background">@color/headerBlue</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_grey</item>
    </style>
</resources>
